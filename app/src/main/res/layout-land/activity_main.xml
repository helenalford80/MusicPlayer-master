<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@mipmap/nath"
         android:scaleType="centerCrop"
         android:id="@+id/backgerandmain"
         />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true"
         android:background="#40ffffff"
         android:gravity="center_horizontal|bottom"
         android:orientation="vertical"
         android:paddingBottom="30dp">

          <de.hdodenhof.circleimageview.CircleImageView
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/cirecleimage"
              android:layout_gravity="center"
              android:layout_width="130dp"
              android:layout_height="130dp"
              app:civ_border_width="0dp"
              app:civ_border_color="#222020"
              android:padding="5dp"
              android:layout_margin="10dp"
              android:src="@mipmap/nath"
              />
          <!--<android.support.v7.widget.CardView-->
              <!--android:layout_width="111dp"-->
              <!--android:layout_height="111dp"-->
              <!--app:cardCornerRadius="110dp">-->

               <!--&lt;!&ndash;<android.support.v7.widget.CardView&ndash;&gt;-->
                   <!--&lt;!&ndash;android:layout_width="111dp"&ndash;&gt;-->
                   <!--&lt;!&ndash;android:layout_height="111dp"&ndash;&gt;-->
                   <!--&lt;!&ndash;android:layout_gravity="center"&ndash;&gt;-->
                   <!--&lt;!&ndash;app:cardCornerRadius="105dp">&ndash;&gt;-->

                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:src="@drawable/nath"-->

                        <!--/>-->

               <!--&lt;!&ndash;</android.support.v7.widget.CardView>&ndash;&gt;-->

          <!--</android.support.v7.widget.CardView>-->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/shape"
         android:alpha="0.8">
          <TextView
              android:id="@+id/txtName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:gravity="center"
              android:text="Son of Man"
              android:textColor="#ffffff"
              android:textSize="24sp"
              android:textStyle="bold"

              />

          <ProgressBar
              android:id="@+id/progressBar"
              style="?android:attr/progressBarStyle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/txtDescription"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:gravity="center"
              android:text="Nathaniel Bassey"
              android:textColor="#ffffff"
              android:textSize="14sp"

              />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingStart="30dp"
              android:paddingEnd="30dp"
              android:weightSum="5"

              >

               <ImageView
                   android:id="@+id/back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:src="@drawable/ic_skip_previous" />

               <ImageView
                   android:id="@+id/play"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:src="@drawable/ic_play_circle_filled" />

               <ImageView
                   android:id="@+id/next"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:src="@drawable/ic_skip_next" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="40dp"
              android:layout_marginTop="16dp"
              android:orientation="horizontal"
              android:weightSum="5">

               <SeekBar
                   android:id="@+id/seekbar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="4"
                   android:progressTint="#fff"
                   android:thumbTint="#c4ff0e" />

               <TextView
                   android:id="@+id/timmp3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="- 2.33"
                   android:textColor="#ffffff"
                   android:textSize="14sp"

                   />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:orientation="horizontal">

               <ImageView
                   android:id="@+id/loop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:src="@drawable/ic_repeat" />

               <ImageView
                   android:id="@+id/download"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:src="@drawable/ic_shuffle" />
          </LinearLayout>
     </LinearLayout>

     </LinearLayout>
</RelativeLayout>