    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView_flag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:civ_border_color="#222020"
        app:civ_border_width="0dp" />


    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_above="@+id/textView_descrition"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-4dp"
        android:layout_toRightOf="@+id/imageView_flag"
        android:gravity="center"
        android:text="دنیای این روزای من"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textDirection="rtl"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_descrition"
        android:layout_width="298dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView_Name"
        android:layout_alignLeft="@+id/textView_Name"
        android:layout_alignBottom="@+id/imageView_flag"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-11dp"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Population: ..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textDirection="rtl"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/nextpage" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/textView_descrition"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="#E0D7D7" />
</RelativeLayout>